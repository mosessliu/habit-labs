<div class="col-md-8 col-md-offset-2 left-align-padding"> 
  <h3>Add Participants!</h3>
  <div class="panel panel-default">
    <div class="form-header">
      Current Participants
    </div>
    <div class="panel-body">
      <div id="habit-participants">
        <%= render 'shared/habit_participants', participants: session[:new_habit_participants] %>
      </div>
      <div style="margin-top:20px">
        <%= render 'shared/user_search' %>
      </div>
      <div id="user-search-results">
        <%= render 'shared/user_search_results', results: nil %>
      </div>
    </div>
    <div align="center" style="margin-bottom:15px"> 
      <%= link_to "Continue", build_habit_path, class: "custom-btn"%>
    </div>
  </div>
</div>