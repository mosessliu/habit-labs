<% if habit.finished %>
  <strong>Habit Finished!</strong>
<% elsif habit.is_complete_for_period?(current_user) %>
  <strong>Habit Complete!</strong>
<% else %>
  <% period = habit.frequency == 0 ? "day" : "week" %>
  <% time_left = habit.get_time_left %>
  <strong><%= time_left %></strong> left to complete habit.
<% end %>