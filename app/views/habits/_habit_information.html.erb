<div style="margin-bottom: 10px">
  <% frequency = habit.frequency == 0 ? "daily" : "weekly" %>
  <% duration = habit.frequency == 0 ? "day" : "week" %>
  This is a <strong><%=frequency%></strong> habit, lasting <strong><%= "#{pluralize(habit.duration, duration)}"%></strong>.
</div>
<div style="margin-bottom:10px">
  <%= react_component("Countdown", {next_deadline: habit.next_deadline}) %>
</div>
<div id="habit-completion-status"style="margin-bottom:10px">
    <%= render 'habits/habit_completion_status.html', habit: habit %>
</div>